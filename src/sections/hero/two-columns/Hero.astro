---
import CallToAction from "../../../components/cta-link/CallToAction.astro";
---

<section class="container">

<div class="hero">
  
  <h1 class="my0">
    Lorem ipsum dolor sit, amet consectetur adipisicing elit. Odit, illo ad.
  </h1>
  
  <div class="sub-h1 my0">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iure vel soluta velit? Neque perferendis asperiores perspiciatis labore? Ipsa, iure nobis.
  </div>
  
  <CallToAction 
    primaryText="View Products"
    primaryLink="/about"
    secondaryText="Learn More"
    secondaryLink="/contact"
  />
  
</div>

<div class="hero-img">
  <img src="/hero-img.png" />
</div>

</section>



<style>

section {
  position: relative;
  padding-inline : var(--spacing-x-default);
  padding-top : 200px;
  padding-bottom : 100px;
}

section::before {
  content : '';
  position : absolute;
  inset : 0 auto 0 50%;

  width : 100vw;
  transform: translateX(-50%);

  background-image: url('/hero-bg.svg');
  background-size: cover;
}

.hero {
  display : flex;
  flex-direction: column;
  gap : 2rem;
}

h1 {
  max-width: 20ch;
}

.sub-h1 {
  font-size : var(--font-size-2);
  line-height : calc( var(--font-size-2) * 1.5);
  max-width: 40ch;
  font-weight : 500;
}

/* Desktop/Tablet */
@media screen and (min-width : 900px) {
  section {
    display : grid;
    grid-template-columns: 1fr 1fr;
  }

  .hero {
    position: relative;
    z-index : 2;
  }
  
  .hero-img {
    position: relative;
    z-index : 1;
    transform: translateX(-20%);
  }
}



</style>