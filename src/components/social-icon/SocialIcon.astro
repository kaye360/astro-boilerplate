---
import { socialIcon } from "./social-icon"
const { 
  name, 
  fill = "hsl( var(--clr-primary-1) )", 
  size = '32' 
} = Astro.props

let svg: string = socialIcon(name, fill)
---

<svg 
  xmlns="http://www.w3.org/2000/svg"
  width={`${ size }px`} height={`${ size }px`} 
  viewBox={`0 0 100 100`} 
  fill='white'
>
  <Fragment set:html={ svg } />
</svg>
  

<style is:global>
.social-icon-path {
  fill : hsl( var(--nav-link-clr) );
}

svg:hover .social-icon-path {
  fill : hsl( var(--nav-link-hover-clr) );
}
</style>