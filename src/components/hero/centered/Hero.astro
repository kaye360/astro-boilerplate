<style>

section {
  display : grid;
  place-items: center;
  min-height : 75vh;
  padding-inline : var(--spacing-x-default);
  padding-block : 100px;

  background-image: url('./bg.svg');
  background-size: cover;

  text-align: center;
}

.hero {
  display : flex;
  flex-direction: column;
  gap : 2rem;
}

h1 {
  max-width: 20ch;
  margin-inline: auto;
}

.sub-h1 {
  font-size : var(--font-size-2);
  line-height : calc( var(--font-size-2) * 1.5);
  max-width: 40ch;
  font-weight : 500;
}

</style>