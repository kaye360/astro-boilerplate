
<>
<button aria-label="Toggle Menu" id="mobile-menu-btn">
  <svg class="nav-icon-open" width="34" height="25" viewBox="0 0 34 25" fill="none">
      <line 
        x1="2.5" y1="12.5" x2="31.5" y2="12.5" 
        stroke="black" stroke-width="5" stroke-linecap="round"/>
      <line 
        x1="2.5" y1="22.5" x2="31.5" y2="22.5" 
        stroke="black" stroke-width="5" stroke-linecap="round"/>
      <line
        x1="2.5" y1="2.5" x2="31.5" y2="2.5" 
        stroke="black" stroke-width="5" stroke-linecap="round"/>
  </svg>
</button>
</>

<style>

  button {
    display: inline-block;
    cursor : pointer;
    transition: all 250ms;
  }

  @media screen and (min-width : 900px) {
    button {
      display : none;
    }
  }

  line {
    stroke : hsl( var(--nav-link-clr) );
  }
</style>

<style is:global>
  .mobile-menu-is-open #mobile-menu-btn {
    transform: rotate(90deg);
  }
</style>



<script type="module">

  const btn = document.querySelector('#mobile-menu-btn')
  const body = document.body
  btn.addEventListener('click', () => {
    if(body.classList.contains('mobile-menu-is-open')) {
      // Close Menu
      body.classList.add('mobile-menu-is-closing')
      setTimeout( () => {
        body.classList.remove('mobile-menu-is-open')
        body.classList.remove('mobile-menu-is-closing')
      }, 350)
    } else {
      // Open Menu
      body.classList.add('mobile-menu-is-open')
    }
  })
  
  </script>
  